<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<h5>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</h5>
<p><%= link_to "Edit", edit_article_path(@article) %></p>

<%= render partial: 'comments/comment' %>
<%= render partial: 'comments/form' %>
<%= link_to "Back to articles", articles_path %>
